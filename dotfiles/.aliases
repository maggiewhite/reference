alias pgrep='ps aux | grep'
alias gg='git grep'
alias make='VERBOSE=1 make'
alias gdb='gdb --eval-command="set startup-with-shell off"'
alias clogs='adb logcat -b all -c'
alias syncdate='adb shell "date `date +%m%d%H%M%Y.%S`"'
alias kerneltime='adb shell echo "pull android logs timecheck: $(date +%s) = $(date +%F_%T)" | tee /dev/kmsg'

# Quick directory backing up
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias .......='cd ../../../../../..'

# some more ls aliases
alias ll='ls -alFh'
alias la='ls -Ah'
alias ll='ls -F'

